    <!-- Bouton Don Sticky -->
    <a href="/don" class="sticky-don-btn" aria-label="Faire un don">
        <i class="fas fa-heart"></i>
        <span>Faire un don</span>
    </a>
    
    <!-- Bouton retour en haut -->
    <button id="scrollToTop" class="scroll-to-top" aria-label="Retour en haut">
        <i class="fas fa-arrow-up"></i>
    </button>
    
    <!-- JavaScript -->
    <script src="/js/modal.js"></script>
    <script src="/js/main.js"></script>
    <script src="/js/mawaqit.js"></script>
    <script>
        // Page transition subtile
        document.addEventListener('DOMContentLoaded', function() {
            // Ajouter transition sur les liens internes
            const links = document.querySelectorAll('a[href^="/"]');
            links.forEach(link => {
                link.addEventListener('click', function(e) {
                    // Ignorer si lien externe ou ancre
                    if (this.hostname !== window.location.hostname || this.hash) return;
                    // Ignorer si ouvre dans nouvel onglet
                    if (this.target === '_blank') return;
                    
                    e.preventDefault();
                    const href = this.getAttribute('href');
                    
                    document.body.style.opacity = '0';
                    setTimeout(() => {
                        window.location.href = href;
                    }, 200);
                });
            });
        });

        // Load More Buttons - Événements Page
        document.addEventListener('DOMContentLoaded', function() {
            // Upcoming Events (3 par 3)
            const loadMoreUpcoming = document.getElementById('loadMoreUpcoming');
            if (loadMoreUpcoming) {
                let upcomingVisible = 3;
                loadMoreUpcoming.addEventListener('click', function() {
                    const upcomingEvents = document.querySelectorAll('#upcomingEventsGrid .event-card');
                    const upcomingToShow = Array.from(upcomingEvents).slice(upcomingVisible, upcomingVisible + 3);
                    upcomingToShow.forEach(event => {
                        event.classList.remove('hidden-event');
                    });
                    upcomingVisible += 3;
                    if (upcomingVisible >= upcomingEvents.length) {
                        loadMoreUpcoming.style.display = 'none';
                    }
                });
            }

            // News (3 par 3)
            const loadMoreNews = document.getElementById('loadMoreNews');
            if (loadMoreNews) {
                let newsVisible = 3;
                loadMoreNews.addEventListener('click', function() {
                    const newsArticles = document.querySelectorAll('#newsGrid .event-card');
                    const newsToShow = Array.from(newsArticles).slice(newsVisible, newsVisible + 3);
                    newsToShow.forEach(article => {
                        article.classList.remove('hidden-event');
                    });
                    newsVisible += 3;
                    if (newsVisible >= newsArticles.length) {
                        loadMoreNews.style.display = 'none';
                    }
                });
            }

            // Past Events (3 par 3)
            const loadMorePast = document.getElementById('loadMorePast');
            if (loadMorePast) {
                let pastVisible = 3;
                loadMorePast.addEventListener('click', function() {
                    const pastEvents = document.querySelectorAll('#pastEventsGrid .event-card');
                    const pastToShow = Array.from(pastEvents).slice(pastVisible, pastVisible + 3);
                    pastToShow.forEach(event => {
                        event.classList.remove('hidden-event');
                    });
                    pastVisible += 3;
                    if (pastVisible >= pastEvents.length) {
                        loadMorePast.style.display = 'none';
                    }
                });
            }
        });

        // ============================================
        // SYSTÈME DE NOTIFICATIONS PERSONNALISÉ
        // ============================================
        function showNotification(message, type = 'info') {
            // Créer le conteneur de notifications s'il n'existe pas
            let container = document.getElementById('notificationContainer');
            if (!container) {
                container = document.createElement('div');
                container.id = 'notificationContainer';
                container.style.cssText = `
                    position: fixed;
                    top: 20px;
                    right: 20px;
                    z-index: 10000;
                    display: flex;
                    flex-direction: column;
                    gap: 10px;
                    max-width: 400px;
                `;
                document.body.appendChild(container);
            }

            // Créer la notification
            const notification = document.createElement('div');
            notification.className = `notification notification-${type}`;
            
            // Définir l'icône selon le type
            let icon = 'fa-info-circle';
            let bgColor = '#3182ce';
            if (type === 'success') {
                icon = 'fa-check-circle';
                bgColor = '#38a169';
            } else if (type === 'error') {
                icon = 'fa-exclamation-circle';
                bgColor = '#e53e3e';
            } else if (type === 'warning') {
                icon = 'fa-exclamation-triangle';
                bgColor = '#dd6b20';
            }

            notification.style.cssText = `
                background: ${bgColor};
                color: white;
                padding: 1rem 1.5rem;
                border-radius: 8px;
                box-shadow: 0 4px 6px rgba(0,0,0,0.3);
                display: flex;
                align-items: center;
                gap: 1rem;
                font-size: 0.95rem;
                animation: slideIn 0.3s ease-out;
                min-width: 300px;
            `;

            notification.innerHTML = `
                <i class="fas ${icon}" style="font-size: 1.2rem;"></i>
                <span style="flex: 1;">${message}</span>
                <button onclick="this.parentElement.remove()" style="
                    background: none;
                    border: none;
                    color: white;
                    cursor: pointer;
                    font-size: 1.2rem;
                    padding: 0;
                    opacity: 0.8;
                " onmouseover="this.style.opacity='1'" onmouseout="this.style.opacity='0.8'">
                    <i class="fas fa-times"></i>
                </button>
            `;

            // Ajouter l'animation CSS si elle n'existe pas
            if (!document.getElementById('notificationStyles')) {
                const style = document.createElement('style');
                style.id = 'notificationStyles';
                style.textContent = `
                    @keyframes slideIn {
                        from {
                            transform: translateX(400px);
                            opacity: 0;
                        }
                        to {
                            transform: translateX(0);
                            opacity: 1;
                        }
                    }
                    @keyframes slideOut {
                        from {
                            transform: translateX(0);
                            opacity: 1;
                        }
                        to {
                            transform: translateX(400px);
                            opacity: 0;
                        }
                    }
                `;
                document.head.appendChild(style);
            }

            container.appendChild(notification);

            // Auto-supprimer après 5 secondes
            setTimeout(() => {
                notification.style.animation = 'slideOut 0.3s ease-out';
                setTimeout(() => {
                    notification.remove();
                }, 300);
            }, 5000);
        }

        // Rendre la fonction accessible globalement
        window.showNotification = showNotification;
    </script>
</body>
</html>
