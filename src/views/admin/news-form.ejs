<%- include('../partials/admin-head', { 
    title, 
    headerTitle: news ? 'Modifier actualité' : 'Nouvelle actualité',
    headerIcon: 'newspaper',
    activeNav: 'news' 
}) %>

    <div class="container">
        <h2 class="page-title"><i class="fas fa-newspaper"></i> <%= news ? 'Modifier' : 'Nouvelle' %> actualité</h2>
        <div class="form-card">
            <form method="POST" action="<%= news ? `/admin/news/${news.id}` : '/admin/news' %>" enctype="multipart/form-data">
                
                <div class="form-group">
                    <label>Titre <span class="required">*</span></label>
                    <input type="text" name="title" id="title" value="<%= news ? news.title : '' %>" required maxlength="50" data-maxlength="50">
                </div>

                <div class="form-group">
                    <label>Catégorie <span class="required">*</span></label>
                    <select name="category" id="category" required>
                        <option value="">-- Sélectionner --</option>
                        <% categories.forEach(cat => { %>
                            <option value="<%= cat.name %>" <%= news && news.category === cat.name ? 'selected' : '' %>>
                                <%= cat.name %>
                            </option>
                        <% }); %>
                        <option value="autre">➕ Autre (nouvelle catégorie)</option>
                    </select>
                    <div class="conditional-field" id="new_category_field">
                        <input type="text" name="new_category" placeholder="Nom de la nouvelle catégorie">
                    </div>
                </div>

                <div class="form-group">
                    <label>Contenu <span class="required">*</span></label>
                    <textarea name="content" id="content" required maxlength="300" data-maxlength="300"><%= news ? news.content : '' %></textarea>
                </div>

                <div class="form-group">
                    <label>Images</label>
                    <div class="image-upload-area" id="uploadArea">
                        <i class="fas fa-cloud-upload-alt"></i>
                        <p><strong>Cliquez pour téléverser des images</strong></p>
                        <p class="hint">JPG, PNG, WEBP - Max 20MB par image</p>
                    </div>
                    <input type="file" name="images" id="images" accept="image/*" multiple class="hidden-input">
                    
                    <div class="image-list" id="image-list">
                        <% if (news && news.images && news.images.length > 0) { %>
                            <% news.images.forEach((img, idx) => { %>
                                <div class="image-item" data-img="<%= img %>">
                                    <img src="<%= img %>" alt="Image <%= idx + 1 %>">
                                    <span class="image-item-name"><%= img.split('/').pop() %></span>
                                    <button type="button" class="btn btn-danger remove-existing-btn">
                                        <i class="fas fa-trash"></i> Supprimer
                                    </button>
                                </div>
                            <% }); %>
                        <% } %>
                    </div>
                </div>

                <div class="form-actions">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save"></i> Enregistrer
                    </button>
                    <a href="/admin/news" class="btn btn-secondary">Annuler</a>
                </div>
            </form>
        </div>
    </div>

    <%- include('../partials/admin-form-scripts') %>
</body>
</html>
