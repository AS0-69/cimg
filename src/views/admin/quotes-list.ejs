<%- include('../partials/admin-head', { 
    title: 'Citations',
    headerTitle: 'Citations', 
    headerIcon: 'quote-right',
    activeNav: 'quotes' 
}) %>

<style>
    .quote-original {
        direction: rtl;
        text-align: right;
        color: #2d3748;
        font-size: 0.9rem;
        margin-bottom: 0.5rem;
    }
    .quote-translation {
        font-style: italic;
        color: #4a5568;
        font-size: 0.85rem;
    }
</style>

<div class="container">
    <div class="toolbar">
        <h2>Toutes les citations (<%= quotes.length %>)</h2>
        <a href="/admin/quotes/new" class="btn btn-primary">
            <i class="fas fa-plus"></i> Nouvelle citation
        </a>
    </div>

    <div class="card">
        <% if (quotes.length === 0) { %>
            <div class="empty-state">
                <i class="fas fa-quote-right"></i>
                <h3>Aucune citation</h3>
                <p>Créez votre première citation pour commencer</p>
            </div>
        <% } else { %>
            <table>
                <thead>
                    <tr>
                        <th>Citation</th>
                        <th>Source</th>
                        <th class="text-center">Statut</th>
                        <th class="text-right">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% quotes.forEach(quote => { %>
                        <tr>
                            <td>
                                <% if (quote.text_original) { %>
                                    <div class="quote-original">
                                        <%= truncate(quote.text_original, 80) %>
                                    </div>
                                <% } %>
                                <div class="quote-translation">
                                    "<%= truncate(quote.text_fr, 100) %>"
                                </div>
                            </td>
                            <td><strong><%= quote.author %></strong></td>
                            <td class="text-center">
                                <span class="badge <%= quote.active ? 'badge-success' : 'badge-danger' %>">
                                    <%= quote.active ? 'Actif' : 'Inactif' %>
                                </span>
                            </td>
                            <td>
                                <div class="actions flex-end">
                                    <a href="/admin/quotes/<%= quote.id %>/edit" class="btn btn-secondary">
                                        <i class="fas fa-edit"></i> Modifier
                                    </a>
                                    <form method="POST" action="/admin/quotes/<%= quote.id %>/delete" class="form-inline delete-form" data-message="Supprimer cette citation ?">
                                        <button type="submit" class="btn btn-danger">
                                            <i class="fas fa-trash"></i> Supprimer
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        <% } %>
    </div>
</div>

<%- include('../partials/admin-foot') %>
