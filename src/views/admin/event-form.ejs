<%- include('../partials/admin-form-head') %>

    <div class="container">
        <div class="form-card">

            <form method="POST" action="<%= event ? `/admin/events/${event.id}` : '/admin/events' %>" enctype="multipart/form-data">
                
                <!-- Pôle -->
                <div class="form-group">
                    <label>Pôle organisateur <span class="required">*</span></label>
                    <select name="pole" id="pole" required>
                        <option value="">-- Sélectionner --</option>
                        <option value="AT" <%= event && event.pole === 'AT' ? 'selected' : '' %>>AT - Ana Teşkilat (Hommes adultes)</option>
                        <option value="GT" <%= event && event.pole === 'GT' ? 'selected' : '' %>>GT - Gençlik Teşkilatı (Jeunes hommes)</option>
                        <option value="KT" <%= event && event.pole === 'KT' ? 'selected' : '' %>>KT - Kadın Teşkilatı (Femmes adultes)</option>
                        <option value="KGT" <%= event && event.pole === 'KGT' ? 'selected' : '' %>>KGT - Kadın Gençlik Teşkilatı (Jeunes femmes)</option>
                        <option value="autre">➕ Autre</option>
                    </select>
                    <div class="conditional-field" id="new_pole_field">
                        <input type="text" name="new_pole" placeholder="Nom du nouveau pôle">
                    </div>
                </div>

                <!-- Titre -->
                <div class="form-group">
                    <label>Titre <span class="required">*</span></label>
                    <input type="text" name="title" id="title" value="<%= event ? event.title : '' %>" required maxlength="50" data-maxlength="50">
                </div>

                <!-- Date et Heures -->
                <div class="form-row-3">
                    <div class="form-group">
                        <label>Date <span class="required">*</span></label>
                        <input type="date" name="date" value="<%= event && event.date ? new Date(event.date).toISOString().split('T')[0] : '' %>" required>
                    </div>
                    <div class="form-group">
                        <label>Heure de début <span class="required">*</span></label>
                        <input type="time" name="start_time" value="<%= event ? event.start_time : '' %>" required>
                    </div>
                    <div class="form-group">
                        <label>Heure de fin <span class="required">*</span></label>
                        <input type="time" name="end_time" value="<%= event ? event.end_time : '' %>" required>
                    </div>
                </div>

                <!-- Lieu et Catégorie -->
                <div class="form-row">
                    <div class="form-group">
                        <label>Lieu <span class="required">*</span></label>
                        <select name="location" id="location" required>
                            <option value="">-- Sélectionner --</option>
                            <% locations.forEach(loc => { %>
                                <option value="<%= loc.name %>" <%= event && event.location === loc.name ? 'selected' : '' %>>
                                    <%= loc.name %>
                                </option>
                            <% }); %>
                            <option value="autre">➕ Autre (nouveau lieu)</option>
                        </select>
                        <div class="conditional-field" id="new_location_field">
                            <input type="text" name="new_location" placeholder="Nom du nouveau lieu">
                        </div>
                    </div>
                    <div class="form-group">
                        <label>Catégorie <span class="required">*</span></label>
                        <select name="category" id="category" required>
                            <option value="">-- Sélectionner --</option>
                            <% categories.forEach(cat => { %>
                                <option value="<%= cat.name %>" <%= event && event.category === cat.name ? 'selected' : '' %>>
                                    <%= cat.name %>
                                </option>
                            <% }); %>
                            <option value="autre">➕ Autre (nouvelle catégorie)</option>
                        </select>
                        <div class="conditional-field" id="new_category_field">
                            <input type="text" name="new_category" placeholder="Nom de la nouvelle catégorie">
                        </div>
                    </div>
                </div>

                <!-- Description -->
                <div class="form-group">
                    <label>Description <span class="required">*</span></label>
                    <textarea name="description" id="description" required maxlength="500" data-maxlength="500"><%= event ? event.description : '' %></textarea>
                </div>

                <!-- Images -->
                <div class="form-group">
                    <label>Images</label>
                    <div class="image-upload-area" id="uploadArea">
                        <i class="fas fa-cloud-upload-alt"></i>
                        <p><strong>Cliquez pour téléverser des images</strong></p>
                        <p class="hint">JPG, PNG, WEBP - Max 20MB par image</p>
                    </div>
                    <input type="file" name="images" id="images" accept="image/*" multiple class="hidden-input">
                    
                    <div class="image-list" id="image-list">
                        <% if (event && event.images) { %>
                            <% 
                            const imageArray = typeof event.images === 'string' ? JSON.parse(event.images) : event.images;
                            if (imageArray && imageArray.length > 0) {
                                imageArray.forEach((img, idx) => { 
                            %>
                                <div class="image-item" data-img="<%= img %>">
                                    <img src="<%= img %>" alt="Image <%= idx + 1 %>">
                                    <span class="image-item-name"><%= img.split('/').pop() %></span>
                                    <button type="button" class="btn btn-danger remove-existing-btn">
                                        <i class="fas fa-trash"></i> Supprimer
                                    </button>
                                </div>
                            <% 
                                });
                            }
                            %>
                        <% } %>
                    </div>
                </div>

                <div class="form-actions">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save"></i> Enregistrer
                    </button>
                    <a href="/admin/events" class="btn btn-secondary">Annuler</a>
                </div>
            </form>
        </div>
    </div>

    <%- include('../partials/admin-form-scripts') %>
</body>
</html>
