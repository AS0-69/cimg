<%- include('../partials/admin-header', { title, activeNav: 'members' }) %>

    <div class="container">
        <h2 style="margin-bottom: 2rem; color: #2d3748;"><i class="fas fa-user-plus"></i> <%= member ? 'Modifier' : 'Nouveau' %> membre</h2>
        <div class="form-card">
            <form method="POST" action="<%= member ? `/admin/members/${member.id}` : '/admin/members' %>" enctype="multipart/form-data">
                
                <div class="form-row">
                    <div class="form-group">
                        <label>Prénom <span class="required">*</span></label>
                        <input type="text" name="first_name" value="<%= member ? member.first_name : '' %>" required>
                    </div>
                    <div class="form-group">
                        <label>Nom <span class="required">*</span></label>
                        <input type="text" name="last_name" value="<%= member ? member.last_name : '' %>" required>
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group">
                        <label>Pôle <span class="required">*</span></label>
                        <select name="pole" id="pole" required>
                            <option value="">-- Sélectionner --</option>
                            <% poles.forEach(pole => { %>
                                <option value="<%= pole.name %>" <%= member && member.pole === pole.name ? 'selected' : '' %>>
                                    <%= pole.name %>
                                </option>
                            <% }); %>
                            <option value="autre">➕ Autre (nouveau pôle)</option>
                        </select>
                        <div class="conditional-field" id="new_pole_field">
                            <input type="text" name="new_pole" placeholder="Nom du nouveau pôle">
                        </div>
                    </div>
                    <div class="form-group">
                        <label>Fonction <span class="required">*</span></label>
                        <select name="role" id="role" required>
                            <option value="">-- Sélectionner --</option>
                            <% roles.forEach(role => { %>
                                <option value="<%= role.name %>" <%= member && member.role === role.name ? 'selected' : '' %>>
                                    <%= role.name %>
                                </option>
                            <% }); %>
                            <option value="autre">➕ Autre (nouvelle fonction)</option>
                        </select>
                        <div class="conditional-field" id="new_role_field">
                            <input type="text" name="new_role" placeholder="Nom de la nouvelle fonction">
                        </div>
                    </div>
                </div>

                <div class="form-row-3">
                    <div class="form-group">
                        <label>Email</label>
                        <input type="email" name="email" value="<%= member ? member.email : '' %>">
                    </div>
                    <div class="form-group">
                        <label>Téléphone</label>
                        <input type="tel" name="phone" value="<%= member ? member.phone : '' %>">
                    </div>
                    <div class="form-group">
                        <label>Ordre d'affichage</label>
                        <input type="number" name="order" value="<%= member ? member.order : 0 %>" min="0">
                    </div>
                </div>

                <div class="form-group">
                    <label>Description</label>
                    <textarea name="description"><%= member ? member.description : '' %></textarea>
                </div>

                <div class="form-group">
                    <label>Photo</label>
                    <div class="image-upload-area" id="uploadArea">
                        <i class="fas fa-user-circle" style="font-size: 3rem; color: #009972;"></i>
                        <p><strong>Cliquez pour téléverser une photo</strong></p>
                    </div>
                    <input type="file" name="image" id="image" accept="image/*" style="display:none">
                    
                    <div class="image-preview" id="preview">
                        <% if (member && member.image) { %>
                            <img src="<%= member.image %>" alt="Photo actuelle">
                        <% } %>
                    </div>
                </div>

                <div class="form-actions">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save"></i> Enregistrer
                    </button>
                    <a href="/admin/members" class="btn btn-secondary">Annuler</a>
                </div>
            </form>
        </div>
    </div>

    <%- include('../partials/admin-form-scripts') %>
</body>
</html>
