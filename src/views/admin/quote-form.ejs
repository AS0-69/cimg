<%- include('../partials/admin-header', { title, activeNav: 'quotes' }) %>

    <div class="container">
        <h2 style="margin-bottom: 2rem; color: #2d3748;"><i class="fas fa-quote-right"></i> <%= quote ? 'Modifier' : 'Nouvelle' %> citation</h2>
        <div class="form-card">
            <form method="POST" action="<%= quote ? `/admin/quotes/${quote.id}` : '/admin/quotes' %>">
                
                <div class="form-group">
                    <label>Texte original (Arabe) <span class="required">*</span></label>
                    <textarea name="text_original" required style="direction: rtl; text-align: right;"><%= quote ? quote.text_original : '' %></textarea>
                    <small style="color: #718096;">Le texte en arabe (Coran, Hadith, etc.)</small>
                </div>

                <div class="form-group">
                    <label>Traduction (Français) <span class="required">*</span></label>
                    <textarea name="text_fr" required><%= quote ? quote.text_fr : '' %></textarea>
                    <small style="color: #718096;">La traduction française du texte</small>
                </div>

                <div class="form-group">
                    <label>Traduction (Turc)</label>
                    <textarea name="text_tr"><%= quote ? quote.text_tr : '' %></textarea>
                    <small style="color: #718096;">La traduction turque du texte (optionnel)</small>
                </div>

                <div class="form-group">
                    <label>Auteur / Source <span class="required">*</span></label>
                    <input type="text" name="author" value="<%= quote ? quote.author : '' %>" required placeholder="Ex: Coran 2:153, Hadith - Bukhari">
                    <small style="color: #718096;">La source de la citation (sourate, hadith, etc.)</small>
                </div>

                <div class="form-group">
                    <div class="checkbox-group">
                        <input type="checkbox" id="active" name="active" <%= quote && quote.active ? 'checked' : '' %>>
                        <label for="active" style="margin-bottom: 0;">Afficher dans le carousel (max 4 actives)</label>
                    </div>
                </div>

                <div class="form-actions">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save"></i> Enregistrer
                    </button>
                    <a href="/admin/quotes" class="btn btn-secondary">Annuler</a>
                </div>
            </form>
        </div>
    </div>

    <%- include('../partials/admin-form-scripts') %>
</body>
</html>
