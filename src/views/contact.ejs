<%- include('partials/head.ejs') %>

<!-- Hero Section -->
<section class="hero hero-page">
    <div class="hero-overlay"></div>
    <div class="container">
        <div class="hero-content">
            <h1 class="hero-title">Contactez-nous</h1>
            <p class="hero-subtitle">Nous sommes à votre écoute pour toute question ou demande</p>
        </div>
    </div>
</section>

<!-- Contact Section -->
<section class="contact-section">
    <div class="container">
        <div class="contact-grid">
            <!-- Colonne 1: Formulaire de contact -->
            <div class="contact-form-container">
                <h2>Envoyez-nous un message</h2>
                
                <% if (locals.success) { %>
                    <div class="alert alert-success">
                        <i class="fas fa-check-circle"></i>
                        Votre message a été envoyé avec succès ! Nous vous répondrons dans les plus brefs délais.
                    </div>
                <% } %>
                
                <% if (locals.errors && errors.length > 0) { %>
                    <div class="alert alert-error">
                        <i class="fas fa-exclamation-circle"></i>
                        <ul>
                            <% errors.forEach(error => { %>
                                <li><%= error.msg %></li>
                            <% }); %>
                        </ul>
                    </div>
                <% } %>
                
                <form method="POST" action="/contact" class="contact-form">
                    <div class="form-row">
                        <div class="form-group">
                            <label for="nom">Nom complet *</label>
                            <input 
                                type="text" 
                                id="nom" 
                                name="nom" 
                                required 
                                class="form-control"
                                value="<%= locals.formData ? formData.nom : '' %>"
                                placeholder="Votre nom"
                            >
                        </div>
                        
                        <div class="form-group">
                            <label for="email">Email *</label>
                            <input 
                                type="email" 
                                id="email" 
                                name="email" 
                                required 
                                class="form-control"
                                value="<%= locals.formData ? formData.email : '' %>"
                                placeholder="votre@email.com"
                            >
                        </div>
                    </div>
                    
                    <div class="form-group">
                        <label for="telephone">Téléphone</label>
                        <input 
                            type="tel" 
                            id="telephone" 
                            name="telephone" 
                            class="form-control"
                            value="<%= locals.formData ? formData.telephone : '' %>"
                            placeholder="06 12 34 56 78"
                        >
                    </div>
                    
                    <div class="form-group">
                        <label for="sujet">Sujet *</label>
                        <select id="sujet" name="sujet" required class="form-control">
                            <option value="">-- Sélectionnez un sujet --</option>
                            <option value="information">Demande d'information</option>
                            <option value="inscription">Inscription aux activités</option>
                            <option value="don">Question sur les dons</option>
                            <option value="evenement">Organisation d'événement</option>
                            <option value="autre">Autre</option>
                        </select>
                    </div>
                    
                    <div class="form-group">
                        <label for="message">Message *</label>
                        <textarea 
                            id="message" 
                            name="message" 
                            required 
                            rows="6" 
                            class="form-control"
                            placeholder="Votre message..."
                        ><%= locals.formData ? formData.message : '' %></textarea>
                    </div>
                    
                    <button type="submit" class="btn btn-primary btn-lg">
                        <i class="fas fa-paper-plane"></i>
                        Envoyer le message
                    </button>
                </form>
            </div>
            
            <!-- Colonne 2: Informations de contact -->
            <div class="contact-info-container">
                <div class="contact-info-card">
                    <h3>Informations de contact</h3>
                    
                    <div class="contact-info-item">
                        <div class="contact-info-icon">
                            <i class="fas fa-map-marker-alt"></i>
                        </div>
                        <div class="contact-info-content">
                            <h4>Adresse</h4>
                            <p>
                                466 Rue Charles Sève<br>
                                69400 Villefranche-sur-Saône<br>
                                France
                            </p>
                        </div>
                    </div>
                    
                    <div class="contact-info-item">
                        <div class="contact-info-icon">
                            <i class="fas fa-phone"></i>
                        </div>
                        <div class="contact-info-content">
                            <h4>Téléphone</h4>
                            <p><a href="tel:+33474680000">04 74 68 00 00</a></p>
                        </div>
                    </div>
                    
                    <div class="contact-info-item">
                        <div class="contact-info-icon">
                            <i class="fas fa-envelope"></i>
                        </div>
                        <div class="contact-info-content">
                            <h4>Email</h4>
                            <p><a href="mailto:contact@mosquee-bleue.fr">contact@mosquee-bleue.fr</a></p>
                        </div>
                    </div>
                    
                    <div class="contact-info-item">
                        <div class="contact-info-icon">
                            <i class="fas fa-clock"></i>
                        </div>
                        <div class="contact-info-content">
                            <h4>Horaires d'ouverture</h4>
                            <p>
                                Lundi - Dimanche<br>
                                Voir les horaires de prière ci-dessous
                            </p>
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- Colonne 3: Réseaux sociaux -->
            <div class="contact-info-container">
                <div class="contact-info-card">
                    <h3>Suivez-nous</h3>
                    <div class="social-links-large">
                        <a href="https://www.facebook.com/mavicamivillefranche" target="_blank" rel="noopener" class="social-link">
                            <i class="fab fa-facebook"></i>
                            <span>Facebook</span>
                        </a>
                        <a href="https://www.instagram.com/mosqueebleue_cimg" target="_blank" rel="noopener" class="social-link">
                            <i class="fab fa-instagram"></i>
                            <span>Instagram</span>
                        </a>
                        <a href="https://linktr.ee/mosqueebleuecimg" target="_blank" rel="noopener" class="social-link linktree-link">
                            <img src="/images/linktree-black.svg" alt="Linktree" width="24" height="24">
                            <span>Linktree</span>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Map Section -->
