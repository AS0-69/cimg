<%- include('../partials/admin-head', { 
    title: 'Actualités',
    headerTitle: 'Actualités', 
    headerIcon: 'newspaper',
    activeNav: 'news' 
}) %>

<style>
    .img-thumb {
        width: 60px;
        height: 60px;
        object-fit: cover;
        border-radius: 8px;
    }
</style>

<div class="container">
    <div class="toolbar">
        <h2>Toutes les actualités (<%= news.length %>)</h2>
        <a href="/admin/news/new" class="btn btn-primary">
            <i class="fas fa-plus"></i> Nouvelle actualité
        </a>
    </div>

    <div class="card">
        <% if (news.length === 0) { %>
            <div class="empty-state">
                <i class="fas fa-newspaper"></i>
                <h3>Aucune actualité</h3>
                <p>Créez votre première actualité pour commencer</p>
            </div>
        <% } else { %>
            <table>
                <thead>
                    <tr>
                        <th>Image</th>
                        <th>Titre</th>
                        <th>Date</th>
                        <th>Catégorie</th>
                        <th class="text-right">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% news.forEach(item => { %>
                        <tr>
                            <td>
                                <% 
                                let displayImage = item.images?.[0] || item.image;
                                %>
                                <% if (displayImage) { %>
                                    <img src="<%= displayImage %>" alt="<%= item.title %>" class="img-thumb">
                                <% } else { %>
                                    <div class="img-thumb img-placeholder">
                                        <i class="fas fa-image"></i>
                                    </div>
                                <% } %>
                            </td>
                            <td><strong><%= item.title %></strong></td>
                            <td><%= formatDateFR(item.createdAt) %></td>
                            <td><span class="badge badge-success"><%= item.category %></span></td>
                            <td>
                                <div class="actions flex-end">
                                    <a href="/admin/news/<%= item.id %>/edit" class="btn btn-secondary">
                                        <i class="fas fa-edit"></i> Modifier
                                    </a>
                                    <form method="POST" action="/admin/news/<%= item.id %>/delete" class="form-inline delete-form" data-message="Supprimer cette actualité ?">
                                        <button type="submit" class="btn btn-danger">
                                            <i class="fas fa-trash"></i> Supprimer
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        <% } %>
    </div>
</div>

<%- include('../partials/admin-foot') %>
