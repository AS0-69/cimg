<%- include('partials/head') %>

    <!-- Hero Section -->
    <section class="hero hero-page">
        <div class="hero-overlay"></div>
        <div class="container">
            <div class="hero-content">
                <h1 class="hero-title fade-in"><%= t.events.page_title || 'Événements & Activités' %></h1>
                <p class="hero-subtitle fade-in"><%= t.events.page_subtitle || 'Découvrez nos prochains événements et activités' %></p>
            </div>
        </div>
    </section>

    <!-- Événements Section -->
    <section class="section events-page-section">
        <div class="container">
            <div class="section-header">
                <h2 class="section-title"><%= t.events.upcoming_events || 'Événements à venir' %></h2>
                <p class="section-subtitle"><%= t.events.upcoming_events_desc || 'Conférences, cérémonies et événements spéciaux' %></p>
            </div>

            <% if (events.length > 0) { %>
                <div class="events-grid">
                    <% events.forEach(event => { %>
                        <article class="event-card">
                            <div class="event-card-image">
                                <img src="<%= event.images && event.images.length > 0 ? event.images[0] : '/images/default-event.jpg' %>" alt="<%= event.title %>">
                                <div class="event-card-category"><%= event.category %></div>
                            </div>
                            <div class="event-card-content">
                                <div class="event-card-date">
                                    <i class="far fa-calendar"></i>
                                    <%= new Date(event.date).toLocaleDateString(currentLang === 'tr' ? 'tr-TR' : 'fr-FR', { 
                                        weekday: 'long', 
                                        year: 'numeric', 
                                        month: 'long', 
                                        day: 'numeric' 
                                    }) %>
                                </div>
                                <h3 class="event-card-title"><%= event.title %></h3>
                                <div class="event-card-meta">
                                    <span><i class="far fa-clock"></i> <%= event.start_time %> - <%= event.end_time %></span>
                                    <span><i class="fas fa-map-marker-alt"></i> <%= event.location %></span>
                                </div>
                                <p class="event-card-description"><%= event.description %></p>
                                <button class="btn btn-primary event-details-btn" data-event-id="<%= event.id %>">
                                    <%= t.events.see_details || 'Voir les détails' %>
                                </button>
                            </div>
                        </article>
                    <% }); %>
                </div>
            <% } else { %>
                <div class="no-events">
                    <i class="far fa-calendar-times"></i>
                    <p><%= t.events.no_events || 'Aucun événement à venir pour le moment' %></p>
                </div>
            <% } %>
        </div>
    </section>

    <!-- Activités Section -->
    <section class="section activities-page-section">
        <div class="container">
            <div class="section-header">
                <h2 class="section-title"><%= t.events.activities || 'Activités régulières' %></h2>
                <p class="section-subtitle"><%= t.events.activities_desc || 'Cours, formations et activités communautaires' %></p>
            </div>

            <% if (activities.length > 0) { %>
                <div class="events-grid">
                    <% activities.forEach(activity => { %>
                        <article class="event-card">
                            <div class="event-card-image">
                                <img src="<%= activity.images && activity.images.length > 0 ? activity.images[0] : '/images/default-event.jpg' %>" alt="<%= activity.title %>">
                                <div class="event-card-category"><%= activity.category %></div>
                            </div>
                            <div class="event-card-content">
                                <div class="event-card-date">
                                    <i class="far fa-calendar"></i>
                                    <%= new Date(activity.date).toLocaleDateString(currentLang === 'tr' ? 'tr-TR' : 'fr-FR', { 
                                        weekday: 'long', 
                                        year: 'numeric', 
                                        month: 'long', 
                                        day: 'numeric' 
                                    }) %>
                                </div>
                                <h3 class="event-card-title"><%= activity.title %></h3>
                                <div class="event-card-meta">
                                    <span><i class="far fa-clock"></i> <%= activity.start_time %> - <%= activity.end_time %></span>
                                    <span><i class="fas fa-map-marker-alt"></i> <%= activity.location %></span>
                                </div>
                                <p class="event-card-description"><%= activity.description %></p>
                                <button class="btn btn-primary event-details-btn" data-event-id="<%= activity.id %>">
                                    <%= t.events.see_details || 'Voir les détails' %>
                                </button>
                            </div>
                        </article>
                    <% }); %>
                </div>
            <% } else { %>
                <div class="no-events">
                    <i class="far fa-calendar-times"></i>
                    <p><%= t.events.no_activities || 'Aucune activité à venir pour le moment' %></p>
                </div>
            <% } %>
        </div>
    </section>

    <%- include('partials/footer') %>
    <%- include('partials/foot') %>