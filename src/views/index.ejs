<%- include('partials/head.ejs') %>

<!-- Hero Section -->
<section class="hero">
    <div class="hero-overlay"></div>
    <div class="hero-content">
        <div class="container">
            <h1 class="hero-title">Bienvenue à la Mosquée Bleue</h1>
            <p class="hero-subtitle">
                Centre islamique de Villefranche-sur-Saône
