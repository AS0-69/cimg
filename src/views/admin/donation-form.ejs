<%- include('../partials/admin-form-head') %>

    <div class="container">
        <div class="form-card">
            <form method="POST" action="<%= donation ? `/admin/donations/${donation.id}` : '/admin/donations' %>" enctype="multipart/form-data">
                
                <div class="form-group">
                    <label>Titre de la campagne <span class="required">*</span></label>
                    <input type="text" name="title" id="title" value="<%= donation ? donation.title : '' %>" required maxlength="50" data-maxlength="50">
                </div>

                <div class="form-group">
                    <label>Description <span class="required">*</span></label>
                    <textarea name="description" id="description" required maxlength="500" data-maxlength="500"><%= donation ? donation.description : '' %></textarea>
                </div>

                <div class="form-row-3">
                    <div class="form-group">
                        <label>Objectif (€) <span class="required">*</span></label>
                        <input type="number" name="goal_amount" value="<%= donation ? donation.goal_amount : '' %>" step="0.01" min="0" required>
                    </div>
                    <div class="form-group">
                        <label>Montant collecté (€)</label>
                        <input type="number" name="current_amount" value="<%= donation ? donation.current_amount : 0 %>" step="0.01" min="0">
                    </div>
                    <div class="form-group">
                        <label>Date de fin</label>
                        <input type="date" name="end_date" value="<%= donation && donation.end_date ? new Date(donation.end_date).toISOString().split('T')[0] : '' %>">
                    </div>
                </div>

                <div class="form-group">
                    <label>Images de la campagne</label>
                    <div class="image-upload-area" id="uploadArea">
                        <i class="fas fa-images"></i>
                        <p><strong>Cliquez pour ajouter des images</strong></p>
                        <p class="text-sm text-muted">Vous pouvez téléverser plusieurs images</p>
                    </div>
                    <input type="file" name="images" id="images" accept="image/*" multiple class="hidden-input">
                    
                    <div class="image-list" id="image-list">
                        <% if (donation && donation.images) { %>
                            <% 
                            const imageArray = typeof donation.images === 'string' ? JSON.parse(donation.images) : donation.images;
                            if (imageArray && imageArray.length > 0) {
                                imageArray.forEach((img, idx) => { 
                            %>
                                <div class="image-item" data-img="<%= img %>">
                                    <img src="<%= img %>" alt="Image <%= idx + 1 %>">
                                    <span class="image-item-name"><%= img.split('/').pop() %></span>
                                    <button type="button" class="btn btn-danger remove-existing-btn">
                                        <i class="fas fa-trash"></i> Supprimer
                                    </button>
                                </div>
                            <% 
                                });
                            }
                            %>
                        <% } %>
                    </div>
                </div>

                <div class="form-group">
                    <div class="checkbox-group">
                        <input type="checkbox" id="active" name="active" <%= donation && donation.active ? 'checked' : '' %>>
                        <label for="active" class="mb-0">Campagne active (afficher sur le site)</label>
                    </div>
                </div>

                <div class="form-actions">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save"></i> Enregistrer
                    </button>
                    <a href="/admin/donations" class="btn btn-secondary">Annuler</a>
                </div>
            </form>
        </div>
    </div>

    <%- include('../partials/admin-form-scripts') %>
</body>
</html>
